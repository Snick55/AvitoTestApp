<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentMovies">

    <fragment
        android:id="@+id/fragmentMovies"
        android:name="com.snick55.avitotestapp.presentation.FragmentMovies"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_fragmentMovies_to_fragmentDetails"
            app:destination="@id/fragmentDetails" >
            <argument
                android:name="movieId"
                app:argType="integer" />

        </action>
    </fragment>
    <fragment
        android:id="@+id/fragmentDetails"
        android:name="com.snick55.avitotestapp.presentation.FragmentDetails"
        android:label="FragmentDetails" >
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>